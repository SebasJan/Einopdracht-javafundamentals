<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="598.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.inholland.eindopdracht.Controllers.CollectionController">
   <children>
      <Label layoutX="34.0" layoutY="40.0" prefHeight="34.0" prefWidth="76.0" text="Items">
         <font>
            <Font name="Verdana Bold" size="20.0" />
         </font>
      </Label>
      <TableView fx:id="itemTable" layoutX="560.0" layoutY="99.0" prefHeight="360.0" prefWidth="681.0">
        <columns>
          <TableColumn fx:id="itemCodeColumn" prefWidth="93.0" text="Item code">
            <cellValueFactory>
              <PropertyValueFactory property="itemCode" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="availableColumn" prefWidth="92.0" text="Available">
            <cellValueFactory>
              <PropertyValueFactory property="available" />
            </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="titleColumn" prefWidth="361.0" text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="authorColumn" prefWidth="131.0" text="Author">
                <cellValueFactory>
                    <PropertyValueFactory property="author" />
                </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <Button layoutX="34.0" layoutY="447.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="96.0" text="Add item" />
      <Button layoutX="389.0" layoutY="447.0" mnemonicParsing="false" onAction="#deleteItemButtonClick" prefHeight="25.0" prefWidth="96.0" text="Delete item" />
      <Label layoutX="34.0" layoutY="74.0" prefHeight="25.0" prefWidth="436.0" text="To edit the data, double click on a cell to edit the information.  Hit enter to save. " />
      <Label fx:id="errorLabel" layoutX="560.0" layoutY="470.0" prefHeight="17.0" prefWidth="124.0" text="Label" textFill="RED" visible="false" />
      <TextField fx:id="itemCodeDeleteField" layoutX="389.0" layoutY="415.0" prefHeight="25.0" prefWidth="130.0" promptText="Item code" />
   </children>
</AnchorPane>
