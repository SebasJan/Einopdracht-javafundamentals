<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="598.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nl.inholland.eindopdracht.Controllers.LendingAndReceivingController">
   <ImageView fitHeight="538.0" fitWidth="813.0" layoutX="19.0" layoutY="156.0" opacity="0.1" pickOnBounds="true"
              preserveRatio="true">
      <Image url="@Images/bookshelf.jpg"/>
   </ImageView>
   <Label fx:id="welcomeText" layoutX="43.0" layoutY="23.0" prefHeight="32.0" prefWidth="407.0"
          text="Welcome {Name of user}">
      <font>
         <Font name="Verdana Bold" size="25.0"/>
      </font>
   </Label>
   <GridPane layoutX="16.0" layoutY="105.0" prefHeight="164.0" prefWidth="555.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="54.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="54.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="303.0" minHeight="0.0" prefHeight="49.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="303.0" minHeight="0.0" prefHeight="49.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="369.0" minHeight="10.0" prefHeight="67.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <opaqueInsets>
         <Insets/>
      </opaqueInsets>
      <padding>
         <Insets top="10.0"/>
      </padding>
      <TextField fx:id="itemCodeLendField" onKeyPressed="#newTextIsEntered" prefHeight="25.0" prefWidth="488.0"
                 promptText="Item code" styleClass="textField">
         <GridPane.margin>
            <Insets left="30.0" right="100.0"/>
         </GridPane.margin>
      </TextField>
      <TextField fx:id="memberIdLendField" onKeyPressed="#newTextIsEntered" prefHeight="25.0" prefWidth="485.0"
                 promptText="Member ID" styleClass="textField" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets left="30.0" right="100.0"/>
         </GridPane.margin>
      </TextField>
      <Button mnemonicParsing="false" onAction="#lendItemButtonClick" onMouseEntered="#mouseEnteredButton"
              onMouseExited="#mouseExitedButton" prefHeight="25.0" prefWidth="86.0" styleClass="customButton"
              text="Lend item" textFill="WHITE" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets left="30.0"/>
         </GridPane.margin>
      </Button>
      <Label fx:id="errorItemCodeLendLabel" prefHeight="30.0" prefWidth="555.0" text="error.." textFill="RED"
             visible="false" GridPane.rowIndex="1"/>
      <Label fx:id="errorMemberIDLabel" prefHeight="30.0" prefWidth="555.0" text="error.." textFill="RED"
             visible="false" GridPane.rowIndex="3"/>
   </GridPane>
   <GridPane layoutX="687.0" layoutY="105.0" prefHeight="118.0" prefWidth="555.0">
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="66.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="33.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="250.0" minHeight="0.0" prefHeight="33.0" vgrow="SOMETIMES"/>
         <RowConstraints maxHeight="369.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES"/>
      </rowConstraints>
      <padding>
         <Insets bottom="10.0"/>
      </padding>
      <TextField fx:id="itemCodeReceiveField" onKeyPressed="#newTextIsEntered" prefHeight="25.0" prefWidth="488.0"
                 promptText="Item code" styleClass="textField">
         <GridPane.margin>
            <Insets left="30.0" right="100.0"/>
         </GridPane.margin>
      </TextField>
      <Button mnemonicParsing="false" onAction="#receiveItemButtonClick" onMouseEntered="#mouseEnteredButton"
              onMouseExited="#mouseExitedButton" styleClass="customButton" text="Receive item" textFill="WHITE"
              GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="30.0"/>
         </GridPane.margin>
      </Button>
      <Label fx:id="errorItemCodeReceive" prefHeight="30.0" prefWidth="555.0" text="error.." textFill="RED"
             visible="false" GridPane.rowIndex="1"/>
   </GridPane>
   <Label fx:id="feedbackText" layoutX="458.0" layoutY="55.0" prefHeight="34.0" prefWidth="425.0" text="Suc6"
          visible="false">
      <font>
         <Font name="Verdana" size="23.0"/>
      </font>
   </Label>
   <Label fx:id="errorLabel" layoutX="16.0" layoutY="284.0" prefHeight="30.0" prefWidth="555.0" text="error.."
          textFill="RED" visible="false"/>
</AnchorPane>
